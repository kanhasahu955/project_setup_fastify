{
  "name": "backend",
  "version": "1.0.2",
  "description": "Live Bhoomi Backend API - A modern RESTful API built with Fastify, TypeScript, and Prisma",
  "main": "dist/main.js",
  "scripts": {
    "dev:boot": "npm run prisma:generate:all && npm run db:push:auto && tsx watch main.ts",
    "dev": "npm run dev:boot",
    "dev:mysql": "cross-env DATABASE_TYPE=mysql npm run dev:boot",
    "dev:mongodb": "cross-env DATABASE_TYPE=mongodb npm run dev:boot",
    "dev:postgresql": "cross-env DATABASE_TYPE=postgresql npm run dev:boot",
    "dev:https": "cross-env USE_HTTPS=true tsx watch main.ts",
    "db:push:auto": "if [ \"$DATABASE_TYPE\" = \"postgresql\" ]; then npm run prisma:push:postgresql; elif [ \"$DATABASE_TYPE\" = \"mysql\" ]; then npm run prisma:push:mysql; else npm run prisma:push:mongodb; fi",
    "build": "npm run prisma:generate:all && npm run db:push:auto && tsup",
    "build:ci": "npm run prisma:generate:all && tsup",
    "postinstall": "npm run prisma:generate:all || true",
    "build:check": "tsc --noEmit",
    "start": "node dist/main.js",
    "start:mysql": "cross-env DATABASE_TYPE=mysql node dist/main.js",
    "start:mongodb": "cross-env DATABASE_TYPE=mongodb node dist/main.js",
    "start:postgresql": "cross-env DATABASE_TYPE=postgresql node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "generate:cert": "tsx scripts/generate-cert.ts",
    "setup:db": "tsx scripts/setup-database.ts",
    "prisma:generate": "prisma generate --schema=prisma/schema.mongodb.prisma",
    "prisma:generate:mongodb": "prisma generate --schema=prisma/schema.mongodb.prisma",
    "prisma:generate:mysql": "prisma generate --schema=prisma/schema.mysql.prisma",
    "prisma:generate:postgresql": "prisma generate --schema=prisma/schema.postgres.prisma",
    "prisma:generate:all": "npm run prisma:generate:mongodb && npm run prisma:generate:mysql && npm run prisma:generate:postgresql",
    "prisma:push": "prisma db push",
    "prisma:push:mongodb": "prisma db push --schema=prisma/schema.mongodb.prisma",
    "prisma:push:mysql": "prisma db push --schema=prisma/schema.mysql.prisma",
    "prisma:push:postgresql": "prisma db push --schema=prisma/schema.postgres.prisma",
    "prisma:studio": "prisma studio",
    "prisma:studio:mongodb": "prisma studio --schema=prisma/schema.mongodb.prisma",
    "prisma:studio:mysql": "prisma studio --schema=prisma/schema.mysql.prisma",
    "prisma:studio:postgresql": "prisma studio --schema=prisma/schema.postgres.prisma",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "http": "httpyac http/*.http --all",
    "http:health": "httpyac http/health.http --all",
    "http:api": "httpyac http/api.http",
    "lint": "tsc --noEmit",
    "clean": "rimraf dist",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version"
  },
  "keywords": [
    "fastify",
    "api",
    "typescript",
    "prisma",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.3",
    "@types/nodemailer": "^7.0.10",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "fastify-tsconfig": "^3.0.0",
    "httpyac": "^6.16.7",
    "prisma": "6.19",
    "rimraf": "^6.1.3",
    "selfsigned": "^5.5.0",
    "supertest": "^7.2.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "tsup": "^8.5.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@imagekit/nodejs": "^7.3.0",
    "@mercuriusjs/gateway": "^5.0.0",
    "@prisma/client": "6.19",
    "@scalar/fastify-api-reference": "^1.44.23",
    "altair-fastify-plugin": "^8.5.1",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.18",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "firebase-admin": "^13.6.1",
    "graphql": "^16.12.0",
    "ioredis": "^5.6.0",
    "lodash": "^4.17.23",
    "mercurius": "^16.7.0",
    "moment": "^2.30.1",
    "nodemailer": "^8.0.1",
    "pino-pretty": "^13.1.3",
    "resend": "^6.9.2",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  }
}
