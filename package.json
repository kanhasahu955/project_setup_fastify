{
  "name": "backend",
  "version": "1.0.0",
  "description": "Live Bhoomi Backend API - A modern RESTful API built with Fastify, TypeScript, and Prisma",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch main.ts",
    "dev:https": "cross-env USE_HTTPS=true tsx watch main.ts",
    "build": "npx prisma generate && tsup",
    "postinstall": "npx prisma generate || true",
    "build:check": "tsc --noEmit",
    "start": "node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "generate:cert": "tsx scripts/generate-cert.ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "http": "httpyac http/*.http --all",
    "http:health": "httpyac http/health.http --all",
    "http:api": "httpyac http/api.http",
    "lint": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": ["fastify", "api", "typescript", "prisma", "mongodb"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "fastify-tsconfig": "^3.0.0",
    "httpyac": "^6.16.7",
    "prisma": "6.19",
    "rimraf": "^6.1.3",
    "selfsigned": "^5.5.0",
    "supertest": "^7.2.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@prisma/client": "6.19",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.18",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "lodash": "^4.17.23",
    "moment": "^2.30.1",
    "nodemailer": "^8.0.1",
    "pino-pretty": "^13.1.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  }
}
